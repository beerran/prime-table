{
    "name": "prime-table-demo",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve --open",
        "build": "ng build --base-href /prime-table/ --prod",
        "build-lib": "ng build prime-table",
        "prebuild-lib": "rimraf dist/prime-table",
        "postbuild-lib": "npm run copy-md && npm run copy-scss",
        "copy-md": "copyfiles -f *.md dist/prime-table/",
        "copy-scss": "copyfiles -f projects/prime-table/src/lib/scss/**/*.scss dist/prime-table/scss/",
        "test": "ng test",
        "lint": "ng lint",
        "lint-lib": "ng lint prime-table",
        "e2e": "ng e2e",
        "commit": "git-cz",
        "travis-deploy-once": "travis-deploy-once --pro",
        "semantic-release": "semantic-release"
    },
    "release": {
        "pkgRoot": "dist/prime-table"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run lint-lib",
            "commit-msg": "commitlint --edit"
        }
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^6.1.0",
        "@angular/common": "^6.1.0",
        "@angular/compiler": "^6.1.0",
        "@angular/core": "^6.1.0",
        "@angular/forms": "^6.1.10",
        "@angular/http": "^6.1.0",
        "@angular/platform-browser": "^6.1.0",
        "@angular/platform-browser-dynamic": "^7.0.0",
        "@angular/router": "^6.1.0",
        "core-js": "^2.5.4",
        "ng-snotify": "^4.3.1",
        "primeicons": "^1.0.0",
        "primeng": "^6.1.5",
        "rxjs": "~6.2.0",
        "zone.js": "~0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.8.0",
        "@angular-devkit/build-ng-packagr": "~0.8.0",
        "@angular/cli": "~6.2.4",
        "@angular/compiler-cli": "^6.1.0",
        "@angular/language-service": "^6.1.0",
        "@commitlint/cli": "^7.2.1",
        "@commitlint/config-conventional": "^7.1.2",
        "@fortawesome/fontawesome-free": "^5.4.1",
        "@types/jasmine": "~2.8.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "bootstrap": "^4.1.3",
        "codelyzer": "~4.3.0",
        "commitizen": "^3.0.3",
        "copyfiles": "^2.1.0",
        "cz-conventional-changelog": "^2.1.0",
        "husky": "^1.1.2",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~3.0.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~1.1.2",
        "karma-jasmine-html-reporter": "^0.2.2",
        "ng-packagr": "^4.1.0",
        "node-sass": "^4.9.4",
        "protractor": "~5.4.0",
        "rimraf": "^2.6.2",
        "semantic-release": "^15.10.3",
        "travis-deploy-once": "^5.0.9",
        "ts-node": "~7.0.0",
        "tsickle": ">=0.29.0",
        "tslib": "^1.9.0",
        "tslint": "~5.11.0",
        "typescript": "~2.9.2"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
